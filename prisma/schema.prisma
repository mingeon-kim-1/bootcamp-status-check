// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Admin {
  id           String @id @default(uuid())
  username     String @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model BootcampConfig {
  id              String  @id @default("default")
  seatsPerRow     Int     @default(10)
  totalRows       Int     @default(5)
  seatDirection   String  @default("bottom-right-horizontal")
  displayTitle    String  @default("Bootcamp Status")
  useCustomLayout Boolean @default(false)
  corridorAfterRows String @default("[]") // JSON array of row indices that have corridors after them
  corridorAfterCols String @default("[]") // JSON array of column indices that have corridors after them
  updatedAt       DateTime @updatedAt
}

model Branding {
  id               String  @id @default("default")
  loginImagePath   String?
  loginText        String?
  displayImagePath String?
  displayText      String?
  organizationName String?
  updatedAt        DateTime @updatedAt
}

model SeatPosition {
  id         String  @id @default(uuid())
  seatNumber Int     @unique
  gridRow    Int
  gridCol    Int
  label      String?
}

model Student {
  id                  String   @id @default(uuid())
  name                String?
  email               String   @unique
  seatNumber          Int      @unique
  passwordHash        String
  status              String   @default("offline") // offline, online, need-help
  lastActive          DateTime?
  isLocked            Boolean  @default(true)
  attendanceVerified  DateTime? // Last time attendance was verified (date only matters)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Pre-registered students by admin (before they sign up)
model PreRegisteredStudent {
  id         String @id @default(uuid())
  name       String
  seatNumber Int    @unique
  createdAt  DateTime @default(now())
}

// Daily attendance codes set by admin
model AttendanceCode {
  id            String   @id @default("default")
  morningCode   String?  // 4-digit code for morning (valid until 1 PM KST)
  afternoonCode String?  // 4-digit code for afternoon (valid until 9 PM KST)
  updatedAt     DateTime @updatedAt
}

// Announcements for students
model Announcement {
  id        String   @id @default("default")
  content   String?  // Announcement text
  isActive  Boolean  @default(false)
  updatedAt DateTime @updatedAt
}
